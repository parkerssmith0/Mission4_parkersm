@{
    ViewData["Title"] = "Grade Calculator";
}
@model GradeCalcModel
<!--This is the Grade Calc that takes the inputs and assigns them to and ID to send to the jquery in the gradeCalc.js file-->
<h1>Grade Calculator</h1>
<br />
<form method="post">
    <label>Assignments:</label>
    <input id="assignments" asp-for="Assignments" /><br /><br />
    <label>Group Project:</label>
    <input id="groupProject" asp-for="GroupProject" /><br /><br />
    <label>Quizzes:</label>
    <input id="quizzes" asp-for="Quizzes" /><br /><br />
    <label>Midterm:</label>
    <input id="midterm" asp-for="Midterm" /><br /><br />
    <label>Final Exam:</label>
    <input id="finalExam" asp-for="FinalExam" /><br /><br />
    <label>INTEX:</label>
    <input id="intex" asp-for="Intex" /><br /><br />
    <input id="submit" type="submit" value="Submit Grades" />
    <div asp-validation-summary="All"></div>
</form>
<br />
<!--This is where the grade from the gradeCalc.js file is returned-->

<script src="@Url.Content("~/js/gradeCalc.js")" type="text/javascript"></script>
